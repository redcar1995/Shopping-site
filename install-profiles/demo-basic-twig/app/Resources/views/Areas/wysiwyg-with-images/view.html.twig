{% import 'Includes/macros.html.twig' as macros %}

{% set content = pimcore_wysiwyg('content') %}

{# add autogenerated meta description #}
{% do pimcore_head_meta().setDescription(content.getData(), 160) %}

<section class="area-wysiwyg">
    <div class="row">
        <div class="col-sm-8">
            {% pimcoreglossary %}
                {{ content|raw }}
            {% endpimcoreglossary %}
        </div>
        <div class="col-sm-4">
            {% for i in pimcore_iterate_block(pimcore_block('images')) %}
                {{ macros.image_link(pimcore_image('image', { thumbnail: 'galleryThumbnail' }), editmode, 'galleryLightbox') }}
            {% endfor %}
        </div>
    </div>
</section>
